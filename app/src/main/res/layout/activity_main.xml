<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="Welcome"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        app:contentPadding="20dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Please enter your personal info" />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/photo"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:clickable="true"

                android:background="@drawable/upload"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <EditText
                android:id="@+id/edit_text1"
                android:autofillHints="username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:background="#fff"
                android:inputType="textPersonName"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:hint="Enter your name"
                android:padding="10dp"

                />
            <EditText
                android:id="@+id/edit_text2"
                android:autofillHints="email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text1"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:background="#fff"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:hint="Enter your email"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/edit_text3"
                android:autofillHints="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text2"
                android:fontFamily="sans-serif"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:background="#fff"
                android:inputType="phone"
                android:textSize="15sp"
                android:padding="10dp"
                android:hint="Enter your phone number"
                />
            <EditText
                android:id="@+id/edit_text4"
                android:autofillHints="password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text3"
                android:fontFamily="sans-serif"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:background="#fff"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:padding="10dp"
                android:hint="Enter the password"
                />
            <EditText
                android:id="@+id/edit_text5"
                android:autofillHints="re-enter password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text4"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:background="#fff"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:hint="Re-enter the password"
                />
            <Button
                android:id="@+id/mainsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cyan"
                android:text="Sign up"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/edit_text5"
                android:onClick="main_sign_up"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mainsignup"
                android:layout_marginTop="20dp"
                android:text="Already have an account?"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text2"
                android:layout_toEndOf="@+id/text2"
                android:layout_below="@id/mainsignup"
                android:layout_marginTop="20dp"
                android:text="@string/signin"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15sp"
                android:onClick="sign_in"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>