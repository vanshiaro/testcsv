<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="Welcome"
        android:layout_marginTop="20dp"

        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        app:contentPadding="20dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25sp"
                android:text="Please enter your personal info" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/photo"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:clickable="true"

                android:background="@drawable/upload"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />

            <EditText
                android:id="@+id/name"
                android:autofillHints="username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:background="#fff"
                android:inputType="textPersonName"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:hint="Enter your name"
                android:padding="10dp"

                />

            <EditText
                android:id="@+id/email"
                android:autofillHints="email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:background="#fff"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:hint="Enter your email"
                android:padding="10dp" />

            <EditText
                android:id="@+id/phone"
                android:autofillHints="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:fontFamily="sans-serif"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:background="#fff"
                android:inputType="phone"
                android:textSize="15sp"
                android:padding="10dp"
                android:hint="Enter your phone number" />

            <EditText
                android:id="@+id/password"
                android:autofillHints="password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:fontFamily="sans-serif"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:background="#fff"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:padding="10dp"
                android:hint="Enter the password" />

<!--            <EditText-->
<!--                android:id="@+id/cnfpassword"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/password"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:autofillHints="re-enter password"-->
<!--                android:background="#fff"-->
<!--                android:fontFamily="sans-serif"-->
<!--                android:hint="Re-enter the password"-->
<!--                android:inputType="textPassword"-->
<!--                android:padding="10dp"-->
<!--                android:textColor="#000000"-->
<!--                android:textSize="15sp" />-->

            <Button
                android:id="@+id/mainsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginTop="30dp"
                android:background="@color/cyan"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:onClick="nullCheck"
                android:text="Sign up"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mainsignup"
                android:layout_marginTop="20dp"
                android:text="Already have an account?"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text2"
                android:layout_toEndOf="@+id/text2"
                android:layout_below="@id/mainsignup"
                android:layout_marginTop="20dp"
                android:text="@string/signin"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15sp"
                android:onClick="sign_in" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>